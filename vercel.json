{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "data/*.json",
      "use": "@vercel/static"
    },
    {
      "src": "*.{ico,png,svg,webmanifest}",
      "use": "@vercel/static"
    }
  ],
  "headers": [
    {
      "source": "/data/data.json",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=300, stale-while-revalidate=60" }
      ]
    },
    {
      "source": "/(.*)\\.(css|js|svg|png|jpg|webp|ico|webmanifest)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/server.js" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
